issn = {1465-6906},
journal = {Genome Biol.},
keywords = {Animal Genetics and Genomics,Bioinformatics,Human Genetics,Microbial Genetics and Genomics,Mycology,Plant Genetics {\&} Genomics},
month = {dec},
number = {1},
pages = {64},
publisher = {BioMed Central},
title = {{Characterization of the immunophenotypes and antigenomes of colorectal cancers reveals distinct tumor escape mechanisms and novel targets for immunotherapy}},
