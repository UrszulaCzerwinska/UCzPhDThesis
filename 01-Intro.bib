doi = {10.1038/modpathol.2017.156},
issn = {0893-3952},
journal = {Mod. Pathol.},
pmid = {29192647},
title = {{Implications of the tumor immune microenvironment for staging and therapeutics}},
url = {http://www.nature.com/doifinder/10.1038/modpathol.2017.156},
