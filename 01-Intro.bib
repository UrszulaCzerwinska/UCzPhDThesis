pmid = {19517027},
title = {{Can Systems Biology Understand Pathway Activation? Gene Expression Signatures as Surrogate Markers for Understanding the Complexity of Pathway Activation}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/19517027 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC2694555 http://www.eurekaselect.com/openurl/content.php?genre=article{\&}issn=1389-2029{\&}volume=9{\&}issue=5{\&}spage=349},
