pages = {E2393--402},
pmid = {27078110},
publisher = {National Academy of Sciences},
title = {{Immuno-Navigator, a batch-corrected coexpression database, reveals cell type-specific gene networks in the immune system.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/27078110 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC4855614},
volume = {113},
